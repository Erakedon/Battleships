@using Microsoft.AspNetCore.Identity
@using Battleships_MBernacki.Areas.Identity.Data
@inject SignInManager<Battleships_MBernackiUser> SignInManager
@inject UserManager<Battleships_MBernackiUser> UserManager

<div id="indexHeader">
    <h1>Warships</h1>
    <h4>by maciej Bernacki</h4>
</div>

@if (SignInManager.IsSignedIn(User))
{
    <div id="index" class="flexContainer">
        <a class="main playButton" asp-area="" asp-controller="Home" asp-action="Lobby">Play</a>
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post">
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
                <button type="submit">Logout</button>
            </form>
    </div>
}
else
{
    <div id="index" class="flexContainer">
    <h4>In order to play</h4>
        <a asp-area="Identity" asp-page="/Account/Register">Register</a>
        <a asp-area="Identity" asp-page="/Account/Login">Login</a>
    </div>
}