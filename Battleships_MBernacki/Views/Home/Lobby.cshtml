@{
    ViewData["Title"] = "Lobby";
}

<div id="RoomCreatePopUp" class="popUp" style="display:none;">

    <label class="inputName">Room name</label>
    <input type="text" id="roomNameInput" />
    <label id="roomNameErrorLabel" class="warning"></label>

    <div id="roomCreateOptions" style="display: none">
        <label class="inputName">Size of map</label>
        <input type="number" id="mapSizeInput" max="8" min="3" value="6" />

        <label class="inputName">List of ships</label>
        <div id="shipListInputContainer">
            <input type="number" value="0" min="0" max="6" />
            <input type="number" value="2" min="0" max="5" />
            <input type="number" value="2" min="0" max="4" />
            <input type="number" value="1" min="0" max="3" />
        </div>
    </div>


    <div class="buttonHolder">
        <button id="optionsShow" onclick="toggleOptions('#roomCreateOptions','#optionsShow')">Show options</button>
        <button id="CreateRoomSubmit" class="main" onclick="submitCreateRoom()">Create</button>
        <button onclick="togglePopUp('#RoomCreatePopUp')">Cancel</button>
    </div>
</div>

<div id="RoomPasswordPopUp" class="popUp" style="display:none;">
    <label class="inputName">Enter room password</label>
    <input type="text" id="roomEnterPasswordInput" />

    <div class="buttonHolder">
        <button onclick="joinRoom()">Create</button>
        <button onclick="togglePopUp('#RoomPasswordPopUp')">Cancel</button>
    </div>
</div>

<script>
    $(document).ready(() => {
        updateRoomList("#roomList");
    });
</script>


<div id="lobby" class="flexContainer">
    <h1>Lobby</h1>
    <div id="lobbyButtons">
        <button id="createRoomBtn" onclick="togglePopUp('#RoomCreatePopUp')">Create New Room</button>
        <button id="updateRoomsBtn" onclick="updateRoomList('#roomList')">Refresh</button>
    </div>

    <div id="lobbyBody">



        <div id="roomList"></div>
    </div>
    <a class="main playButton" asp-area="" asp-controller="Home" asp-action="Index"><button>Back</button></a>

</div>