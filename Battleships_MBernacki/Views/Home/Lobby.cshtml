@*@model Battleships_MBernacki.Views.Home.Lobby*@

@{
    ViewData["Title"] = "Lobby";
}

<div id="RoomCreatePopUp" class="popUp" style="display:none;">

    <label class="inputName">Room name</label>
    <input type="text" id="roomNameInput" />
    <label id="roomNameErrorLabel" class="errorLabel">Label mutherfucker</label>

    <label class="inputName">Password (optional)</label>
    <input type="text" id="roomPasswordInput" />

    <button onclick="submitCreateRoom()">Create</button>
    <button onclick="togglePopUp('#RoomCreatePopUp')">Cancel</button>
</div>

<script>
    checkIfNicknameSet();
    $(document).ready(function () {
        updateRoomList("#result");
    });
</script>


<div id="lobby" class="flexContainer">
    <div id="lobbyHeader">
        <button onclick="togglePopUp('#RoomCreatePopUp')">Create New Room</button>
        <button onclick="updateRoomList('#result')">Refresh</button>


    </div>
    <div id="lobbyBody">



    <div id="result"></div>
    <div id="msg"></div>
    </div>

</div>


