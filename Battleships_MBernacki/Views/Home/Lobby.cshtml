@*@model _Views_Home_Lobby*@
@*@model Battleships_MBernacki.Views.Home.Lobby*@

@{
    ViewData["Title"] = "Lobby";
}

<div id="RoomCreatePopUp" class="popUp" style="display:none;">

    <label class="inputName">Room name</label>
    <input type="text" id="roomNameInput" />
    <label id="roomNameErrorLabel" class="errorLabel"></label>

    <label class="inputName">Password (optional)</label>
    <input type="text" id="roomPasswordInput" />

    <div class="buttonHolder">
        <button id="CreateRoomSubmit" onclick="submitCreateRoom()">Create</button>
        <button onclick="togglePopUp('#RoomCreatePopUp')">Cancel</button>
    </div>







</div>

<div id="RoomPasswordPopUp" class="popUp" style="display:none;">
    <label class="inputName">Enter room password</label>
    <input type="text" id="roomEnterPasswordInput" />

    <div class="buttonHolder">
        <button onclick="joinRoom()">Create</button>
        <button onclick="togglePopUp('#RoomPasswordPopUp')">Cancel</button>
    </div>
</div>

<script>
    //checkIfNicknameSet();
    $(document).ready(() => {
        updateRoomList("#roomList");
    });
</script>


<div id="lobby" class="flexContainer">
    <div id="lobbyHeader">
        <h2 id="lobbyheader">Lobby</h2>
        <button id="createRoomBtn" onclick="togglePopUp('#RoomCreatePopUp')">Create New Room</button>
        <button id="updateRoomsBtn" onclick="updateRoomList('#roomList')">Refresh</button>


    </div>
    <div id="lobbyBody">



    <div id="roomList"></div>
    <div id="msg"></div>
    </div>

</div>


